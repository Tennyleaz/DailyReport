<Window x:Class="DailyReport.UploadDBWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DailyReport"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow"
        Title="UploadDBWindow" Height="100" Width="300">
    <StackPanel>
        <ProgressBar Name="progressBar" Height="25" Margin="0,10,0,0" IsIndeterminate="True"/>
        <TextBlock Name="tbStatus" HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
